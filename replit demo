use strict';

let months = ['March', 'April', 'May', 'June', 'July'];

months[8] = 'November';
console.log(months);

console.log(months[6]);

//Method
//functional logic that works with an Objects
//In this case functional logic that works with arrays

// .pop()
months.pop();
//pop removes the last item from an array

//months.push('December');


console.log(months);

// .shift()
// shift removes an items from the beginning of an array. reorders all elements in the array
months.shift();

console.log(months);

// .push()
// adds an item to the end of an array
months.push('December');

//unshift()
//inserts an item into the front of an array
//reorders all elements in the array
months.unshift('February');
console.log(months);

// .splice()
// splice( start index, number of items to remove, what to add if anything);

months.splice(1, 3, 'March', 'April', 'May');
console.log(months);

months.unshift('January');
console.log(months);


months.splice(7, 3, 'August', 'September', 'October', 'November');

console.log(months);


// Array returned values
let shiftedItem = months.shift();
console.log(months);
console.log(shiftedItem);

let poppedItem = months.pop()
console.log(months);
console.log(poppedItem);
